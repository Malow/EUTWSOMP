.common
  %div
    %h4 EUTW Spec Ops Mission Planner
    %h4 Password Reset
    
      
  .input_line
    %p Username:
    %input{"type" => "text",
           "ng-model" => "username",
           "onkeydown" => "if (event.keyCode == 13) document.getElementById('btn').click()"}
    %br
    %input{"type" => "submit",
           "value" => "Reset Password",
           "id" => "btn",
           "ng-click" => "forgot_password(username)"}
    %p{"ng-show" => "forgot_password_text"} {{forgot_password_text}}