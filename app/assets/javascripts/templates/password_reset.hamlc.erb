.common
  %div
    %h4 EUTW Spec Ops Mission Planner
    %h4 Password Reset
    
      
  .input_line
    %p New Password:
    %input{"type" => "password",
           "ng-model" => "new_password",
           "onkeydown" => "if (event.keyCode == 13) document.getElementById('btn').click()"}
    %br
    %input{"type" => "submit",
           "value" => "Confirm",
           "id" => "btn",
           "ng-click" => "reset_password(new_password)"}
    %p{"ng-show" => "password_reset_text"} {{password_reset_text}}
    %a.password_reset{"href" => "javascript:;",
       "ng-show" => "password_reset_text",
       "ng-click" => "go_to_login()"} Go back to Login