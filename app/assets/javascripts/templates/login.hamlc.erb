.common
  %div
    %h4 EUTW Spec Ops Mission Planner
    %h4 Login
    
    
  .input_line
    %p Username:
    %input{"type" => "text",
           "ng-model" => "username",
           "onkeydown" => "if (event.keyCode == 13) document.getElementById('btn').click()"}
    %p Password: 
    %input{"type" => "password",
           "ng-model" => "password",
           "onkeydown" => "if (event.keyCode == 13) document.getElementById('btn').click()"}
    %br
    %input{"type" => "submit",
           "value" => "Login",
           "id" => "btn",
           "ng-click" => "login(username, password)"}
    %br
    %input{"type" => "submit",
           "value" => "Register",
           "ng-click" => "go_to_register()"}